{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
    },
    "request": {
      "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
    },
    "detailed": {
      "format": "%(asctime)s [%(levelname)s] %(name)s:%(lineno)d: %(message)s"
    }
  },
  "handlers": {
    "null": {
      "class": "logging.NullHandler"
    },
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "standard",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "detailed",
      "filename": "logs/taskhub.log",
      "maxBytes": 10485760,
      "backupCount": 5
    },
    "request_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "request",
      "filename": "logs/requests.log",
      "maxBytes": 10485760,
      "backupCount": 5
    }
  },
  "loggers": {
    "": {
      "handlers": [
        "console",
        "file"
      ],
      "level": "INFO",
      "propagate": false
    },
    "taskhub": {
      "handlers": [
        "console",
        "file"
      ],
      "level": "INFO",
      "propagate": false
    },
    "taskhub.request": {
      "handlers": [
        "request_file"
      ],
      "level": "INFO",
      "propagate": false
    },
    "taskhub.tools": {
      "handlers": [
        "console",
        "file"
      ],
      "level": "INFO",
      "propagate": false
    }
  }
}