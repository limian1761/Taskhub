{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "standard": {
      "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "standard",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "standard",
      "filename": "logs/taskhub.log"
    }
  },
  "loggers": {
    "": {
      "handlers": ["console"],
      "level": "INFO",
      "propagate": false
    },
    "taskhub": {
      "handlers": ["console", "file"],
      "level": "DEBUG",
      "propagate": false
    }
  }
}